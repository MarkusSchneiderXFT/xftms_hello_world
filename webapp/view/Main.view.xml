<mvc:View controllerName="zxft.xftms.hello_world.controller.Main" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<FlexBox alignItems="Center" justifyContent="Center">
                            <items>
                                <FormattedText htmlText="{i18n>textHelloWorld}"
                                               class="sapUiSmallMargin" />
                            </items>
                        </FlexBox>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>